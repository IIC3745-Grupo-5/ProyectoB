<h1 class="title"><%= @cinema.name %></h1>
<div class="movie-collection">
  <% @movies.each do |movie| %>
    <div class="movie">
      <img src=<%= movie.photo %> class="movie-image">
      <div class="movie-title-container">
        <%= link_to movie.title.to_s, movie, class: "movie-title" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Back', cinemas_path, class: "back-btn" %>

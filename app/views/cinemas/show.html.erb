<h1 class="title"><%= @cinema.name %></h1>
<div class="movie-collection">
  <% @movies_array.each do |mo| %>
    <div class="single-movie-display">
      <img src=<%= mo[:movie].photo %> class="single-image">
      <p class="single-movie-title"><%= mo[:movie].title %></p>
      <div class="schedules-container">
        <div class="schedule">
          <p class="inside-text text-one">Morning:</p>
          <% if mo[:morning_schedule].rooms.length > 0 %>
            <% mo[:morning_schedule].rooms.each do |room| %>
              <%= link_to room.name.to_s, room_path(:id => room.id, :scheduleId => mo[:morning_schedule].id), class: "inside-text text-two" %>
            <% end %>
          <% else %>
            <p class="inside-text text-two">None</p>
          <% end %>
        </div>
      </div>
      <div class="schedules-container">
        <div class="schedule">
          <p class="inside-text text-one">Afternoon:</p>
          <% if mo[:afternoon_schedule].rooms.length > 0 %>
            <% mo[:afternoon_schedule].rooms.each do |room| %>
              <%= link_to room.name.to_s, room_path(:id => room.id, :scheduleId => mo[:afternoon_schedule].id), class: "inside-text text-two" %>
            <% end %>
          <% else %>
            <p class="inside-text text-two">None</p>
          <% end %>
        </div>
      </div>
      <div class="schedules-container">
        <div class="schedule">
          <p class="inside-text text-one">Evening:</p>
          <% if mo[:evening_schedule].rooms.length > 0 %>
            <% mo[:evening_schedule].rooms.each do |room| %>
              <%= link_to room.name.to_s, room_path(:id => room.id, :scheduleId => mo[:evening_schedule].id), class: "inside-text text-two" %>
            <% end %>
          <% else %>
            <p class="inside-text text-two">None</p>
          <% end %>
        </div>
      </div>
      <div class="movie-schedules">
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Back', cinemas_path, class: "back-btn" %>

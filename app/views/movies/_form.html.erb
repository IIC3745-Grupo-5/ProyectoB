<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movies from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'The title of your movie' %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.text_field :photo, placeholder: 'An image url' %>
  </div>

  <div class="field">
    <%= form.hidden_field :cinema, value: @cinema.name %>
  </div>

  <div class="field">
    <%= form.label "Morning schedules" %>
    <%= form.text_field :roomMorning, placeholder: "Possible rooms are #{@morning_placeholders}" %>
  </div>
  
    <div class="field">
    <%= form.label "Afternoon schedules" %>
    <%= form.text_field :roomAfternoon, placeholder: "Possible rooms are #{@afternoon_placeholders}" %>
  </div>
  
    <div class="field">
    <%= form.label "Evening schedules" %>
    <%= form.text_field :roomNight, placeholder: "Possible rooms are #{@evening_placeholders}" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
